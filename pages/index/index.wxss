.main{
  margin-bottom: 140rpx;
}
swiper {
  height: 421.5rpx;
}

swiper-item image {
  width: 100%;
  height: 100%;
}

.search-text {
  margin: 30rpx 15rpx 0rpx 15rpx;
  border: 1px solid gray;
  border-radius: 16px;
  display: flex;
  justify-content: center;
  height: 50rpx;
  line-height: 50rpx;
}

.search-text icon {
  margin: 4rpx 0rpx;
  text-align: center;
}

.search-text text {
  height: 50rpx;
  line-height: 50rpx;
  color: gray;
}

.select-title {
  margin: 8rpx auto;
  text-align: center;
  color: #ff9700;
  padding: 10rpx 0;
}

.select-bottom {
  margin-top: -10rpx;
  height: 375rpx;
}

.select-bottom image {
  width: 100%;
}

.select-top {
  display: flex;
  justify-content: space-between;
  margin-top: 8rpx;
}

.sell-img {
  width: 375rpx;
  height: 375rpx;
}

.newest-lists {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-evenly;
}

.newest-list {
  width: 46%;
  height: 330rpx;
  background-color: #f4f4f4;
  border-radius: 20rpx;
  margin: 10rpx 10rpx;
}

.media-img {
  margin: 16rpx;
  display: flex;
  justify-content: center;
}

.media-text {
  text-align: center;
}

.media-text text {
  display: block;
}

.newest-list image {
  width: 200rpx;
  height: 200rpx;
}
